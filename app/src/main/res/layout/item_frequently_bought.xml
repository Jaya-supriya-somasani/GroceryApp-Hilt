<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yellow_40">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/frequentlyBoughtHeadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequently_bought_tv"
        app:layout_constraintTop_toTopOf="@id/viewAllBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/viewAllBtn"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_normal"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewAllBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/view_all_tv"
        android:layout_marginEnd="@dimen/margin_normal"
        android:backgroundTint="@color/cobalt_blue"
        android:layout_marginTop="@dimen/dimen_12"
        android:textAllCaps="false"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dimen_12"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/viewAllBtn"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_frequently_bought_card"
        tools:itemCount="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>