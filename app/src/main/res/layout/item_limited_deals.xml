<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_image_vw"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:src="@drawable/nonveg"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CircleShape"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_image_vw"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Meativorous Chicken Curry cut Skinless , 500 g"
        android:textSize="@dimen/tv_16"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_12"
        android:text="500g"
        app:layout_constraintTop_toBottomOf="@id/item_heading_tv"
        app:layout_constraintStart_toEndOf="@id/item_image_vw"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="97/-"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_image_vw"
        app:layout_constraintTop_toBottomOf="@id/item_weight_tv"
        android:layout_marginStart="@dimen/margin_small"
        android:textSize="@dimen/tv_16"
        android:layout_marginTop="@dimen/margin_normal"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mrp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_price_tv"
        app:layout_constraintTop_toTopOf="@id/item_price_tv"
        android:layout_marginStart="@dimen/margin_normal"
        app:layout_constraintBottom_toBottomOf="@id/item_price_tv"
        android:textSize="@dimen/tv_12"
        android:text="249/-"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/offer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mrp_tv"
        app:layout_constraintTop_toTopOf="@id/item_price_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_price_tv"
        android:layout_marginStart="@dimen/margin_normal"
        android:background="@color/green_gangsta"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_12"
        android:padding="@dimen/padding_xx_small"
        android:text="61% off"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addCardView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        app:strokeColor="@color/cobalt_blue"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/margin_normal"
        app:strokeWidth="1dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@id/item_price_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_price_tv"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/addTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/verticalDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/cobalt_blue"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:text="Add"/>
            <View
                android:id="@+id/verticalDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/cobalt_blue"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintStart_toEndOf="@id/addTv"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/verticalDivider"
                android:src="@drawable/ic_baseline_add"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/margin_x_small"
                android:layout_marginStart="@dimen/margin_x_small"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:id="@+id/meat_discount_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_discount"
        app:layout_constraintTop_toBottomOf="@id/addCardView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_normal"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/meat_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/meat_discount_img"
        app:layout_constraintBottom_toBottomOf="@id/meat_discount_img"
        android:text="5% Cashback on Flipkart Axis Bank Card"
        app:layout_constraintStart_toEndOf="@id/meat_discount_img"
        android:layout_marginStart="@dimen/margin_small"
        />
    <View
        android:id="@+id/meat_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/meat_discount_img"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/grey_500"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/food_image_vw"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:src="@drawable/food"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        app:layout_constraintTop_toBottomOf="@id/meat_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CircleShape"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/food_heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_image_vw"
        app:layout_constraintTop_toBottomOf="@id/meat_divider"
        android:text="Meals nov veg Curries, 500 g"
        android:textSize="@dimen/tv_16"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/food_weight_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_12"
        android:text="500g"
        app:layout_constraintTop_toBottomOf="@id/food_heading_tv"
        app:layout_constraintStart_toEndOf="@id/item_image_vw"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/food_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="900/-"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/food_image_vw"
        app:layout_constraintTop_toBottomOf="@id/food_weight_tv"
        android:layout_marginStart="@dimen/margin_small"
        android:textSize="@dimen/tv_16"
        android:layout_marginTop="@dimen/margin_normal"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/food_mrp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/food_price_tv"
        app:layout_constraintTop_toTopOf="@id/food_price_tv"
        android:layout_marginStart="@dimen/margin_normal"
        app:layout_constraintBottom_toBottomOf="@id/food_price_tv"
        android:textSize="@dimen/tv_12"
        android:text="1249/-"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/food_offer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/food_mrp_tv"
        app:layout_constraintTop_toTopOf="@id/food_price_tv"
        app:layout_constraintBottom_toBottomOf="@id/food_price_tv"
        android:layout_marginStart="@dimen/margin_normal"
        android:background="@color/green_gangsta"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_12"
        android:padding="@dimen/padding_xx_small"
        android:text="61% off"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/food_addCardView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        app:strokeColor="@color/cobalt_blue"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/margin_normal"
        app:strokeWidth="1dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@id/food_price_tv"
        app:layout_constraintBottom_toBottomOf="@id/food_price_tv"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/food_quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/food_addTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/food_verticalDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/cobalt_blue"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:text="Add"/>
            <View
                android:id="@+id/food_verticalDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/cobalt_blue"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_normal"
                app:layout_constraintStart_toEndOf="@id/food_addTv"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/food_verticalDivider"
                android:src="@drawable/ic_baseline_add"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/margin_x_small"
                android:layout_marginStart="@dimen/margin_x_small"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:id="@+id/food_discount_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_discount"
        app:layout_constraintTop_toBottomOf="@id/food_addCardView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_normal"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/food_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/food_discount_img"
        app:layout_constraintBottom_toBottomOf="@id/food_discount_img"
        android:text="10% Cashback on Flipkart Axis Bank Card"
        app:layout_constraintStart_toEndOf="@id/meat_discount_img"
        android:layout_marginStart="@dimen/margin_small"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/food_discount_img"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/grey_500"
        />

</androidx.constraintlayout.widget.ConstraintLayout>